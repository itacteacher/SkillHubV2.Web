@model SkillsHubV2.Domain.Entities.HardSkill

@{
    ViewData["Title"] = "Delete Hard Skill";
}

<h1>Delete Skill</h1>

<h3>Are you sure you want to delete the skill: <strong>@Model.Name</strong>?</h3>
<p><strong>Description:</strong> @Model.Description</p>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>